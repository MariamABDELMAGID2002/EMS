@page
@model EMS.Web.Pages.UserModel
@{
}

<!-- td-breadcrumb-area-start -->
<div class="td-breadcrumb-area td-breadcrumb-spacing bg-position" data-background="/img/breadcrumb/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="td-breadcrumb-title-wrap">
                    <h2 class="td-breadcrumb-title mb-10 wow td-animetion-left" data-wow-duration="1.5s" data-wow-delay="0.3s">Welcome User</h2>
                    <div class="td-breadcrumb-list wow td-animetion-right" data-wow-duration="1.5s" data-wow-delay="0.3s">
                        <ul>
                            <li><a href="~/Index">Home</a></li>
                            <li><i class="fa-sharp fa-solid fa-angle-right fa-fw"></i></li>
                            <li class="pages">User Profile</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- td-breadcrumb-area-end -->

<div class="m-auto" style="width:500px;">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="td-contact-form-wrap">
                    <form method="post">
                        <div class="td-contact-form-box">
                            <h3 class="td-postbox-form-title mb-15 text-center">User Interests</h3>
                            <div class="row">

                                <script>
                                    function addCheck(checked,value)
                                    {
                                        var obj=document.getElementById("hchecked");
                                        if(checked)
                                            obj.value +=","+value;
                                        else
                                            obj.value =obj.value.replace(","+value,"");
                                    }
                                </script>

                                <div class="col-12 mb-20">
                                    <input type="hidden" id="hchecked" name="chk" value=""/>
                                    
                                    <table class="table table-bordered table-striped table-hover">
                                        <tr>
                                            <th>*</th>
                                            <th>Event Type</th>
                                        </tr>
                                        
                                        @foreach (var type in Model.EventTypes)
                                        { 
                                            <tr>
                                                <td><input type="checkbox" onchange="addCheck(this.checked,this.value)" id="@string.Format("chk{0}",@type.EventTypeID)" value="@type.EventTypeID" /></td>
                                                <td>@type.TypeName</td>
                                            </tr>
                                        }
                                        
                                    </table>
                                </div>
                               
                                <div class="col-12 text-center">
                                    <button type="submit" class="td-btn">Save Interests</button>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
