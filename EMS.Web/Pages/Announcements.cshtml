@page
@model EMS.Web.Pages.AnnouncementsModel
@{
}


<!-- td-breadcrumb-area-start -->
<div class="td-breadcrumb-area td-breadcrumb-spacing bg-position" data-background="/img/breadcrumb/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="td-breadcrumb-title-wrap">
                    <h2 class="td-breadcrumb-title mb-10 wow td-animetion-left" data-wow-duration="1.5s" data-wow-delay="0.3s">Event Announcements</h2>
                    <div class="td-breadcrumb-list wow td-animetion-right" data-wow-duration="1.5s" data-wow-delay="0.3s">
                        <ul>
                            <li><a href="~/Index">Home</a></li>
                            <li><i class="fa-sharp fa-solid fa-angle-right fa-fw"></i></li>
                            <li class="pages">Announcements</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- td-breadcrumb-area-end -->
<!-- td-postbox-area-start -->
<div class="td-postbox-area pt-140 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-xxl-9 col-xl-8 col-lg-8">
                <div class="td-postbox-wrapper mr-20 mb-40">
                    @foreach (var announce in Model.Announcements)
                    {
                        <div class="td-postbox-item mb-40">
                            <div class="td-postbox-thumb mb-25">
                                <img class="w-100" style="height:400px;" src="@Model.adminPath/upload/@(string.Format("a{0}.jpg",announce.AnnounceID))" alt="">
                            </div>
                            <div class="td-postbox-content">
                                <div class="td-blog-date mb-10">
                                    <span class="mr-20 date">
                                        <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M12.1111 2V4.80003M5.88888 2V4.80003M2 7.59992H16M3.55556 3.39988H14.4444C15.3036 3.39988 16 4.02668 16 4.79989V14.6C16 15.3732 15.3036 16 14.4444 16H3.55556C2.69645 16 2 15.3732 2 14.6V4.79989C2 4.02668 2.69645 3.39988 3.55556 3.39988Z" stroke="#444444" stroke-width="1.44" stroke-linecap="round" stroke-linejoin="round" />
                                        </svg>
                                        @announce.CreatedAt.Value.ToString("MMMM dd,yy hh:mm tt")
                                    </span>
                                    <span class="mr-20 date">
                                        <i class="flaticon-account"></i>
                                        by Admin
                                    </span>

                                </div>
                                <h3 class="td-blog-title mb-15">@announce.Title</h3>
                                <p class="mb-25">
                                    @announce.Description
                                </p>

                            </div>
                        </div>
                    }


                </div>
            </div>
            <div class="col-xxl-3 col-xl-4 col-lg-4">
                <div class="td-blog-sidebar-wrapper pl-40 mb-40">

                    <div class="td-blog-sidebar-widget td-product-bottom-border mb-35 pb-20">
                        <div class="td-product-left-title-wrap mb-15">
                            <h3 class="td-product-left-title">Suggested Events</h3>
                            <span class="td-product-left-border"></span>
                        </div>
                        @foreach (var objevent in Model.Events)
                        {
                            <div class="td-blog-post d-flex mb-25">
                                <div class="td-blog-post-thumb">
                                    <a href="blog-details.html"><img src="@Model.adminPath/upload/@(string.Format("e{0}.jpg",objevent.EventID))" alt="blog"></a>
                                </div>
                                <div class="td-blog-content-2">
                                    <h4 class="td-blog-post-title"><a class="fw-bold" href="/EventDetails/@objevent.EventID">@objevent.Title </a></h4>
                                    <span class="td-blog-post-date"><i class="flaticon-calendar"></i>@objevent.StartDate.Value.ToString("MMMM dd,yy hh:mm tt")</span>
                                </div>
                            </div>
                        }
                        
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
<!-- td-postbox-area-end -->