</head>

<body>

    <!-- Preloader Start -->
    <div class="preloader">
        <div class="loader"></div>
    </div>
    <!-- Preloader End -->
    <!-- main-area -->
    <main>

        <!-- td-breadcrumb-area-start -->
        <div class=" mb-20 td-breadcrumb-area  bg-position" data-background="/img/breadcrumb/breadcrumb.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="td-breadcrumb-title-wrap text-center">
                            <h2 class="td-breadcrumb-title mb-10 wow td-animetion-left" data-wow-duration="1.5s" data-wow-delay="0.3s">Change your password</h2>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- td-breadcrumb-area-end -->
        <!-- td-contact-form-area-start -->
        
       
            <div class="m-auto" style="width:500px;">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="td-contact-form-wrap">
                                <form id="contact-form" action="https://html.themegenix.com/evente/assets/mail.php" method="POST">
                                    <div class="td-contact-form-box">
                                        <h3 class="td-postbox-form-title mb-15 text-center">Change Password</h3>
                                        <div class="row">
                                            
                                            <div class="col-12 mb-20">
                                                <input class="td-input" name="email" type="email" placeholder="Email">
                                            </div>
                                            <div class="col-12 mb-20">
                                                <input class="td-input" name="Password" type="password" placeholder="New Password">
                                            </div>
                                            <div class="col-12 mb-20">
                                                <input class="td-input" name="Password" type="password" placeholder="Confirm Password">
                                            </div>
                                            <div class="col-12 text-center">
                                                <button type="submit" class="td-btn">Change Password</button>
                                            </div>
                                            <p class="ajax-response pt-10 text-danger fw-bold text-center"></p>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
       
        <!-- td-contact-form-area-end -->




    </main>
    <!-- main-area-end -->
    <!-- footer-area-start -->
    <footer>
        <div class=" mt-20 td-footer-area  bg-position" data-background="/img/footer/bg.jpg">
            <div class="container">

                <div class="row">
                    <div class="col-12">
                        <div class="td-footer-bottom pt-15">
                            <div class="row align-items-center">
                                <div class="col-md-9">
                                    <div class="td-footer-bottom-copyright mb-10">
                                        <p>Copyright © 2025 EMS All rights reserved.</p>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="td-footer-bottom-social text-right mb-10">
                                        <span><a href="#"><i class="fa-brands fa-linkedin"></i></a></span>
                                        <span><a href="#"><i class="fa-brands fa-instagram"></i></a></span>
                                        <span><a href="#"><i class="fa-brands fa-whatsapp"></i></a></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- footer-area-end -->
