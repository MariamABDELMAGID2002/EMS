<body>

    <!-- Preloader Start -->
    <div class="preloader">
        <div class="loader"></div>
    </div>
    <!-- Preloader End -->


    <!-- main-area -->
    <main>

        <!-- td-breadcrumb-area-start -->
        <div class=" mb-20 td-breadcrumb-area  bg-position" data-background="/img/breadcrumb/breadcrumb.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="td-breadcrumb-title-wrap text-center">
                            <h2 class="td-breadcrumb-title mb-10 wow td-animetion-left" data-wow-duration="1.5s" data-wow-delay="0.3s">Sign In/Up to events</h2>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- td-breadcrumb-area-end -->

        

        <!-- td-contact-form-area-start -->
        <div class="nav td-schedule-tab-btn justify-content-center mb-5" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            <button class="nav-link active" id="signin-tab" data-bs-toggle="pill" data-bs-target="#signin" type="button" role="tab" aria-controls="v-pills-home1" aria-selected="false">
                Sign In
            </button>
            <button class="nav-link" id="signup-tab" data-bs-toggle="pill" data-bs-target="#signup" type="button" role="tab" aria-controls="v-pills-health " aria-selected="false">
                Sign Up
            </button>
            
        </div>

        <div class="m-auto tab-pane fade show active" role="tabpanel" aria-labelledby="signin-tab" style="width:500px;" id="signin">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="td-contact-form-wrap">
                            <form id="contact-form" action="https://html.themegenix.com/evente/assets/mail.php" method="POST">
                                <div class="td-contact-form-box">
                                    <h3 class="td-postbox-form-title mb-15 text-center">Sign In</h3>
                                    <div class="row">
                                        <div class="col-12 mb-20">
                                            <input class="td-input" name="email" type="email" placeholder="Email">
                                        </div>
                                        <div class="col-12 mb-20">
                                            <input class="td-input" name="Password" type="password" placeholder="Password">
                                        </div>
                                        <div class="col-12 text-center">
                                            <button type="submit" class="td-btn">Sign In</button>
                                        </div>
                                        <p class="ajax-response pt-10 text-danger fw-bold text-center"></p>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="m-auto tab-pane fade" role="tabpanel" aria-labelledby="signup-tab" style="width:500px;" id="signup">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="td-contact-form-wrap">
                            <form id="contact-form" action="https://html.themegenix.com/evente/assets/mail.php" method="POST">
                                <div class="td-contact-form-box">
                                    <h3 class="td-postbox-form-title mb-15 text-center">Sign Up</h3>
                                    <div class="row">
                                        <div class="col-12 mb-20">
                                            <input class="td-input" name="name" type="text" placeholder="Name">
                                        </div>
                                        <div class="col-12 mb-20">
                                            <input  class="td-input" name="email" type="email" placeholder="Email">
                                        </div>
                                        <div class="col-12 mb-20">
                                            <input  class="td-input" name="Password" type="password" placeholder="Password">
                                        </div>
                                        <div class="col-12 mb-20">
                                            <input class="td-input" name="Password" type="password" placeholder="Confirm Password">
                                        </div>
                                        <div class="col-12 text-center">
                                            <button type="submit" class="td-btn">Sign Up</button>
                                        </div>
                                        <p class="ajax-response pt-10 text-danger fw-bold text-center"></p>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- td-contact-form-area-end -->




    </main>
    <!-- main-area-end -->


    
